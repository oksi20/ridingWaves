<div class="container m-auto" style="width: 400px;">
<form enctype="multipart/form-data" id="signupForm" method="POST" action="/signup" class="d-flex flex-column align-items-center" >

    <div class="form-group">
    <label for="image" style="font-size:18px;">Picture:
      <input id="image" class="form-control" name="image" type="file" style="width:200px">
    </label>
  </div>
  <div class="form-group">
    <label for="username" style="font-size:18px;">Username:
      <input id="username" class="form-control" name="username" type="text" required minlength="3" style="width:200px">
    </label>
  </div>
  <div class="form-group">
    <label for="name" style="font-size:18px;">Name:
      <input id="name" class="form-control" name="name" type="text" required style="width:200px">
    </label>
  </div>
  <div class="form-group">
    <label for="lastname" style="font-size:18px;">Lastame:
      <input id="lastname" class="form-control" name="lastname" type="text" required style="width:200px">
    </label>
  </div>
  <div class="form-group">
    <label for="email" style="font-size:18px;">Email:
      <input id="email" class="form-control" name="email" type="email" required style="width:200px">
    </label>
  </div>
  <div class="form-group">
    <label for="password" style="font-size:18px;">Password:
      <input id="password" class="form-control" name="password" type="password" required minlength="5" style="width:200px">
    </label>
  </div>
  <button type="submit" class="btn btn-primary m-2">Signup</button>
</form>
</div>
